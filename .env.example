
# Database Configuration
DB_URL=postgresql://username:password@localhost:5432/aeron_db

# Backend Configuration
VITE_API_URL=http://localhost:3001/api
BACKEND_PORT=3001

# Frontend Configuration
VITE_FRONTEND_URL=http://localhost:5000
VITE_FRONTEND_BASE_URL=/
VITE_FRONT_PORT=5000

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Environment Mode
NODE_ENV=development

# Airline Configuration
VITE_AIRLINE_CODE=FZ

# CORS Configuration
CORS_ALLOWED_ORIGINS=localhost,127.0.0.1,replit.dev
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept,Origin,X-Requested-With
CORS_OPTIONS_SUCCESS_STATUS=200

# LLM Configuration - Choose your preferred provider
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# JWT Secret
JWT_SECRET=your-secret-key-change-in-production

# Replit Configuration (if deploying on Replit)
# REPL_SLUG=your-repl-name
# REPLIT_DEV_DOMAIN=replit.dev
